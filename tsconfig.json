{
  "compilerOptions": {
    /* ===== File Layout ===== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ===== Environment ===== */
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ===== Build Options ===== */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ===== Strict Type Checking ===== */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,

    /* ===== Performance & Clean ===== */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ===== Alias Config ===== */
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
